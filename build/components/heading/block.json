{
  "apiVersion": 3,
  "name": "app/heading",
  "title": "Custom Heading",
  "category": "advanced",
  "icon": "star-filled",
  "description": "Heading block with customizable styles.",
  "supports": {
    "html": false
  },
  "attributes": {
    "content": {
      "type": "string",
      "default": "Enter your heading"
    },
    "level": {
      "type": "number",
      "default": 2
    },
    "textAlign": {
      "type": "string",
      "default": "left"
    },
    "color": {
      "type": "string",
      "default": "#1A1A1A"
    },
    "fontWeight": {
      "type": "string",
      "default": "700"
    },
    "fontSize": {
      "type": "string",
      "default": "1.625rem"
    },
    "lineHeight": {
      "type": "string",
      "default": "1.2"
    },
    "fontFamily": {
      "type": "string",
      "default": "Bai Jamjuree, sans-serif"
    },
    "textTransform": {
      "type": "string",
      "default": "uppercase"
    },
    "paddingLeft": {
      "type": "number",
      "default": 48
    },
    "paddingRight": {
      "type": "number",
      "default": 48
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css"
}